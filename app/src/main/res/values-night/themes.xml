<resources>

    <style name="Theme.AppTheme" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Colors -->
        <item name="colorPrimary">@color/purple</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/purple_light</item>
        <item name="android:statusBarColor">@color/purple</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:fontFamily">@font/sf_pro_text_regular</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="ScreenBackground">
        <item name="android:background">@color/background</item>
    </style>
    <style name="cardBackground">
        <item name="cardBackgroundColor">@color/card_night</item>
        <item name="cardElevation">5dp</item>
    </style>
    <style name="secondaryColor">
        <item name="android:background">@color/purple_dark</item>
    </style>
    <style name="textPrimary">
        <item name="android:textColor">@color/text_primary_dark</item>
    </style>
    <style name="textSecondary">
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <style name="CustomDialogTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:background">@color/dialog_night</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@style/CustomDialogAnimation</item>
        <item name="android:windowBackground">@drawable/rounded_background</item>
        <item name="android:textAppearanceButton">@style/CustomButtonTextAppearance</item>
        <item name="android:textCursorDrawable">@drawable/custom_cursor</item>
    </style>

    <style name="CustomButtonTextAppearance">
        <item name="android:textSize">18sp</item>
        <item name="android:background">@drawable/button_background</item> <!-- Reference the button background -->
        <item name="android:textColor">@android:color/white</item> <!-- Set text color -->
        <item name="android:backgroundTint">@color/purple</item> <!-- Use the custom button color attribute -->
    </style>


    <style name="CustomDialogAnimation">
        <!-- Define your enter and exit animations here -->
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>
    <style name="cardDialogBackground">
        <item name="cardBackgroundColor">@color/purple_secondary</item>
    </style>
</resources>